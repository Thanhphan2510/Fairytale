<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thanhpt.fairytale">

    <uses-permission android:name="android.permission.CAMERA"></uses-permission>
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".API.MainApplication"
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.WelcomeActivity" />
        <activity android:name=".Activity.SignUpActivity" />
        <activity
            android:name=".Activity.MainAfterSignupActivity"
            android:label="@string/title_activity_main_after_signup" />
        <activity android:name=".Activity.SignInActivity" />
        <activity android:name=".Activity.TermConditionsActivity" />
        <activity android:name=".Activity.ForgotPassActivity" />
        <activity android:name=".Activity.SelectPictureActivity" />
        <activity android:name=".Activity.RateActivity" />
        <activity android:name=".Activity.SelectPictureGalleryActivity" />
        <activity android:name=".Activity.BookNowActivity" />
        <activity android:name=".Activity.MakeBookingActivity" />
        <activity android:name=".Activity.ActivedUserActivity"></activity>
    </application>

</manifest>